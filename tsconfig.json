{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js",
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
